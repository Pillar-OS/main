{
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "lib": [
      "dom",
      "ES2022"
    ],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "strict": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    ".idea",
    "node_modules"
  ]
}